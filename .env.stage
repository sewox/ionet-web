# Staging Environment Configuration

# Server Configuration
PORT=3001
NODE_ENV=staging

# Database
DB_PATH=server/db/stage.db

# Security
# IMPORTANT: Use different secrets for each environment
JWT_SECRET=REPLACE_WITH_STAGING_JWT_SECRET_64_CHAR_HEX
ADMIN_PASSWORD_HASH=REPLACE_WITH_STAGING_ADMIN_PASSWORD_HASH

# CORS Configuration
# Replace with your actual staging domain
ALLOWED_ORIGINS=https://your-staging-domain.com

# Frontend Configuration (Vite)
VITE_BASE_PATH=/
VITE_API_URL=https://your-staging-domain.com
VITE_APP_ENV=staging

# File Upload
UPLOAD_DIR=server/uploads/stage
MAX_FILE_SIZE=52428800

# Email Configuration (Optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=staging@your-domain.com
SMTP_PASS=REPLACE_WITH_STAGING_SMTP_PASSWORD
MAIL_FROM=noreply@your-domain.com
MAIL_TO=admin@your-domain.com
