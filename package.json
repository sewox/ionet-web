{
  "name": "@ionet/web",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"NODE_ENV=development node server/index.cjs\" \"vite --mode development\"",
    "dev:stage": "concurrently \"NODE_ENV=staging node server/index.cjs\" \"vite --mode stage\"",
    "dev:prod": "concurrently \"NODE_ENV=production node server/index.cjs\" \"vite --mode production\"",
    "build": "vite build --mode production",
    "build:dev": "vite build --mode development",
    "build:stage": "vite build --mode stage",
    "build:prod": "vite build --mode production",
    "preview": "vite preview --mode production",
    "preview:stage": "vite preview --mode stage",
    "type-check": "tsc --noEmit",
    "lint": "npm run type-check",
    "docker:build": "docker build --no-cache -t ionet-web:latest .",
    "docker:build:stage": "docker build --no-cache --build-arg VITE_BASE_PATH=/ --build-arg VITE_APP_ENV=staging -t ionet-web:stage .",
    "docker:build:prod": "docker build --no-cache --build-arg VITE_BASE_PATH=/ --build-arg VITE_APP_ENV=production -t ionet-web:prod ."
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "body-parser": "^2.2.1",
    "concurrently": "^9.2.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "file-type": "^16.5.4",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.3",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.11",
    "pm2": "^6.0.14",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-helmet-async": "^2.0.5",
    "react-quill": "^2.0.0",
    "react-router-dom": "6.22.3",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "uuid": "^13.0.0",
    "validator": "^13.15.26",
    "winston": "^3.11.0",
    "xss": "^1.0.15"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@types/nodemailer": "^7.0.4",
    "@types/quill": "^2.0.14",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.18",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "~5.8.2",
    "vite": "^6.2.0"
  }
}